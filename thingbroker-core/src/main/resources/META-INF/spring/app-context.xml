<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>Example configuration to get you started.</description>

	<context:component-scan base-package="ca.ubc.magic.thingbroker" />

    <bean id="thingService" class="ca.ubc.magic.thingbroker.services.ThingServiceImpl"/>
	<bean id="eventService" class="ca.ubc.magic.thingbroker.services.EventServiceImpl"/>
	
	<bean name="msgObj" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
       <property name="basename" value="/ca/ubc/magic/thingbroker/language/thingbroker_messages"></property>
	</bean>
</beans>
